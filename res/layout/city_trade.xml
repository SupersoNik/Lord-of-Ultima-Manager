<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Incoming"/>
    <ListView android:id="@+id/incoming_trades" android:layout_height="wrap_content"
              android:layout_width="wrap_content"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Outgoing"/>
    <ListView android:id="@+id/outgoing_trades" android:layout_height="wrap_content"
              android:layout_width="wrap_content"/>

</LinearLayout>