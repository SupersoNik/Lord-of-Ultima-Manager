<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <TextView android:layout_height="match_parent" android:layout_width="match_parent" android:text="Town Hall:" />
    <TextView android:layout_height="match_parent" android:layout_width="match_parent" android:text="" android:id="@+id/town_hall_level" />

    <TextView android:layout_height="match_parent" android:layout_width="match_parent" android:text="City Wall:" />
    <TextView android:layout_height="match_parent" android:layout_width="match_parent" android:text="" android:id="@+id/city_wall_level" />

    <TextView android:layout_height="match_parent" android:layout_width="match_parent" android:text="Resources" />
    <ListView android:id="@+id/resource_list" android:layout_width="match_parent" android:layout_height="match_parent" />
</LinearLayout>